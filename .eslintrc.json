{
  "globals": {
    "expect": true,
    "sinon": true
  },
  "env": {
    "es6": true,
    "node": true,
    "mocha": true
  },
  "plugins": [
    "mocha",
    "async-await"
  ],
  "extends": "eslint:recommended",
  "parserOptions": {
    "sourceType": "module",
    "ecmaVersion": 8,
    "ecmaFeatures": {
        "experimentalObjectRestSpread": true
    }
  },
  "rules": {
    "async-await/space-after-async": 1,
    "async-await/space-after-await": 1,
    "mocha/no-exclusive-tests": "error",
    "indent": [
      "warn",
      2
    ],
    "linebreak-style": [
      2,
      "unix"
    ],
    "quotes": [
      2,
      "single"
    ],
    "semi": [
      "warn",
      "never"
    ]
  }
}